unit Finances;

interface

uses Delegates.interfaces;

type
  TSimpleFinances = class(TAggregatedObject, IFinances)
  public
    constructor Create(AController: IInterface);
    destructor Destroy; override;
    function Current: Currency;
    function AsString: string;
    class function New(AController: IInterface): IFinances;

  end;

implementation

{ TSimpleFinances }

function TSimpleFinances.AsString: string;
begin
  Result := Self.ClassName;
end;

constructor TSimpleFinances.Create(AController: IInterface);
begin
  inherited Create(AController);
end;

function TSimpleFinances.Current: Currency;
begin
  Result := 200;
end;

destructor TSimpleFinances.Destroy;
begin

  inherited;
end;

class function TSimpleFinances.New(AController: IInterface): IFinances;
begin
  Result := Self.Create(AController);
end;

end.
